@using Hiking.Data.Models
@model List<Hike>

@{
    ViewData["Title"] = "Home Page";
    int x = 1;
}

<div class="text-center">
    <h1 class="display-4">Hikes for health</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Difficulty</th>
            <th scope="col">Distance</th>
            <th scope="col">Duration</th>
            <th scope="col">Height Difference </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var hike in Model) // Model est un mot clé
        {
           
        <tr>
            <td>@x</td>
            <td>@hike.Name</td>
            <td>@hike.Difficulty</td>
            <td>@hike.Distance km</td>
            <td>@hike.Duration.ToString(@"hh\hmm")</td>
            <td>@hike.Height_difference m</td>
        </tr>
            x++;
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Home" asp-action="Create">Add a new hike</a>


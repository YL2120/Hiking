@model Hiking.Data.Models.Hike

@{
    ViewData["Title"] = "Edit";
    string[] difficulties = { "Easy", "Average", "Difficult", "Very difficult" };
    string[] disponibilities = { "Yes", "Thunderstorm", "Blizzard", "Landslide", "Heatwave" };
}

<h1>Edit the hike.</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Difficulty" class="control-label"></label>
                <select class="form-select" name="Difficulty" id="Difficulty">
                    <option selected>@Model.Difficulty</option>
                    @foreach (string difficulty in difficulties)
                    {
                        if (difficulty != Model.Difficulty)
                        {
                          <option value="@difficulty">@difficulty</option>
                         }
                            
                     }

                </select>
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Distance" class="control-label"></label>
                <input asp-for="Distance" class="form-control" />
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" value="@Model.Duration.ToString(@"hh\:mm")"/>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height_difference" class="control-label"> Height Difference</label>
                <input asp-for="Height_difference" class="form-control" />
                <span asp-validation-for="Height_difference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Available" class="control-label"> Height Difference</label>
                <select class="form-select" name="Available" id="Available">
                    <option selected>@Model.Available</option>
                    @foreach (string disponibility in disponibilities)
                    {
                        if (disponibility != Model.Available)
                        {
                            <option value="@disponibility">@disponibility</option>
                        }

                    }
                </select>
                <span asp-validation-for="Available" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Update the hike" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a class="btn btn-success" asp-action="Index">Back to the List of Hikes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
